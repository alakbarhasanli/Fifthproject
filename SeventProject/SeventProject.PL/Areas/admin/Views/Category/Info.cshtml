@model Category
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">
        DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
                                                                   href="https://datatables.net">official DataTables documentation</a>.
    </p>

    <!-- DataTales Example -->
    <a type="button" class="btn-primary" asp-area="admin" asp-controller="Category" asp-action="Create">Create</a>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>

                            <th>Id</th>
                            <th>Title</th>
                        </tr>
                    </thead>

                    <tbody>


                        <tr>
                            <td>@Model.Id</td>
                            <td>@Model.Title</td>
                            <td> <a type="button" class="btn-warning" asp-area="admin" asp-controller="Category" asp-action="Update" asp-route-id="@Model.Id">Update</a></td>
                            <td><a type="button" class="btn-primary" asp-area="admin" asp-controller="Category" asp-action="Index" asp-route-id="@Model.Id">Go back</a></td>
                            <td><a type="button" class="btn-danger" asp-area="admin" asp-controller="Category" asp-action="Delete" asp-route-id="@Model.Id">Delete</a></td>
                        </tr>


                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
            </div>
<!-- End of Main Content -->
